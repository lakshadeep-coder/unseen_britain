extends layout

block content
  .form-container
    h2 Add New Place

    // SUCCESS MESSAGE
    if success
      .success-msg #{success}

    // ERROR LIST
    if errors
      ul.error-list
        each err in errors
          li #{err}

    form(method="POST", action="/place/create", enctype="multipart/form-data")

      // TITLE
      label Title
      input(
        type="text",
        name="title",
        value=form && form.title || "",
        required
      )

      // DESCRIPTION
      label Description
      textarea(name="description", required)
        | #{form && form.description || ""}

      // REGION
      label Region
      input(
        type="text",
        name="region",
        value=form && form.region || "",
        required
      )

      // CATEGORY
      label Category
      select(name="category", required)
        option(value="") Select Category
        option(
          value="nature",
          selected=form && form.category == "nature"
        ) Nature
        option(
          value="village",
          selected=form && form.category == "village"
        ) Village
        option(
          value="viewpoint",
          selected=form && form.category == "viewpoint"
        ) Viewpoint
        option(
          value="historic",
          selected=form && form.category == "historic"
        ) Historic

      // DIFFICULTY
      label Difficulty
      select(name="difficulty", required)
        option(value="") Select Difficulty
        option(
          value="Easy",
          selected=form && form.difficulty == "Easy"
        ) Easy
        option(
          value="Moderate",
          selected=form && form.difficulty == "Moderate"
        ) Moderate
        option(
          value="Hard",
          selected=form && form.difficulty == "Hard"
        ) Hard

      hr

      // COST DETAILS
      h3 Cost Details (Â£)

      input(
        type="number",
        name="travel_cost",
        placeholder="Travel Cost",
        value=form && form.travel_cost || 0,
        min="0"
      )

      input(
        type="number",
        name="food_cost",
        placeholder="Food Cost",
        value=form && form.food_cost || 0,
        min="0"
      )

      input(
        type="number",
        name="stay_cost",
        placeholder="Stay Cost",
        value=form && form.stay_cost || 0,
        min="0"
      )

      input(
        type="number",
        name="entry_fee",
        placeholder="Entry Fee",
        value=form && form.entry_fee || 0,
        min="0"
      )

      hr

      // REQUIREMENTS
      h3 What to Carry

      label
        input(
          type="checkbox",
          name="footwear",
          checked=form && form.footwear
        )
        | Footwear

      label
        input(
          type="checkbox",
          name="water",
          checked=form && form.water
        )
        | Water

      label
        input(
          type="checkbox",
          name="food",
          checked=form && form.food
        )
        | Food

      label
        input(
          type="checkbox",
          name="raincoat",
          checked=form && form.raincoat
        )
        | Raincoat

      hr

      // PHOTO UPLOAD
      h3 Upload Photo
      input(type="file", name="photo", accept="image/*")

      button(type="submit") Create Place
